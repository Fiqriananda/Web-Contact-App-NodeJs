<div class="container mt-3">
  <div class="row">
    <div class="col md-8">
      <h2>Daftar Kontak</h2>

      <a href="/contact/add" class="btn btn-primary">Add Contact</a>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Number Handphone</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contact.length === 0) { %>
            <tr>
              <td colspan="4">
                 <div class="alert alert-warning" role="alert">
                   No Contact
                  </div>
              </td>
            </tr>
          <% } else { %>
          <% contact.forEach((ct, no) => { no++%>
          <tr>
            <th scope="row"><%= no++ %></th>
            <td><%= ct.nama %></td>
            <td><%= ct.hp %></td>
            <td>
              <a href="/contact/<%= ct.nama %>" class="btn btn-success">Detail</a>
            </td>
          </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
