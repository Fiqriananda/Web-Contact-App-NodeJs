<% if (!contact) { %>
  <div class="alert alert-danger mt-3" role="alert">
    No Contact <a href="/contact" class="alert-link">&laquo; Back to List</a>.
  </div>
<% }else{ %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><%= contact.nama %></li>
                  <li class="list-group-item"><%= contact.hp %></li>
                  <li class="list-group-item"><%= contact.email %></li>
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info mb-3" onclick="return confirm('Apakah Yakin Ingin Update Data')">Update</a>
                  <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger" onclick="return confirm('Apakah Yakin Ingin Meng-delete Data')">Delete</a>
                  <li class="list-group-item"><a href="/contact">&laquo; Kembali ke daftar Contact</a></li>

                </ul>
              </div>
        </div>
    </div>
</div>
<% } %>