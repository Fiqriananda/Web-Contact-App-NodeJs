<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Data Contact</h2>

      <% if (typeof error != 'undefined') { %>
      <div class="alert alert-warning" role="alert">
        <ul>
          <% error.forEach(er => { %>
          <li><%= er.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="POST" action="/contact/update">
        <input type="hidden" name="oldName" value="<%= (contact.oldName) ? contact.oldName: contact.nama %>">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="hp" class="form-label">Nomor Handphone</label>
          <input type="text" class="form-control" id="hp" name="hp" required  value="<%= contact.hp %>" />
        </div>
        <button type="submit" class="btn btn-primary">Edit Contact</button>
      </form>
    </div>
  </div>
</div>
